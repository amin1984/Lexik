
{% extends 'SatisfactoryOperationBundle::layout.html.twig' %}

{% block content %}
    <!-- Main content view  -->
    <div class="pageheader">
        <h1>PARAMETRAGE</h1>
    </div>
    <!--main content start-->
    <section ng-app="neuboard" ng-controller="groupCtrl" id="form-user" class="animated fadeInUp" >
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        {% if (app.session.flashBag.has('successAppParam')) %}
                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                {% for msg in app.session.flashBag.get('successAppParam') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}

                        {{ form_start(form, {'method': 'post', 'action': path('setting_application'), 'attr': {'class': 'form-horizontal form-border','novalidate': 'novalidate'} }) }}

                        <div class="form-group">
                            <label class="col-sm-12">
                                Email qui est utilisable pour envoyer les fichiers source : 
                            </label>
                            <br><br>  
                            <div class="col-sm-6">
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }} 
                                {% for error in form.email.vars.errors %}
                                    <span class="alert alert-danger-form">{{ error.message }}</span>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-12">
                                Identifianr PARAM-ERDF* : 
                            </label>
                            <br><br>  
                            <div class="col-sm-6">
                                {{ form_widget(form.idParamErdf, { 'attr': {'class': 'form-control'} }) }} 
                                {% for error in form.idParamErdf.vars.errors %}
                                    <span class="alert alert-danger-form">{{ error.message }}</span>
                                {% endfor %}
                            </div>
                        </div>    

                        <div class="form-group">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary" >
                                    <i class="fa fa-save"></i> Sauver
                                </button>
                            </div>
                        </div> 

                        {{ form_end(form) }}  

                    </div>
                </div>
            </div>
        </div>
    </section>
    {#{% include 'SatisfactorySettingBundle:js:settingNew.js.twig' %}#}
{% endblock %}
