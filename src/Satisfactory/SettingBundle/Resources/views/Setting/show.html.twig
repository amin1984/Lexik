
{% extends 'SatisfactorySettingBundle::layout.html.twig' %}

{% block content %}
    <body class="sharing-page" >
        <section class="main-content-wrapper edit-operation" ng-app="neuboard"  ng-controller="settingShowCtrl" id="form-operation" class="animated fadeInUp" >

            <h1 class="col-md-12">
               VISUALISATION D'UN PARAMETRAGE
            </h1>
            <br><br>
            <div class="row">
                <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12"> 
                            <a style="text-decoration: underline" href="{{ path('setting_index',{'group_id':groupId}) }}">
                                Retour à la liste des paramétrages
                            </a>
                        </div>    
                    </div><br/>
                    <div class="row">
                        <div class="col-md-2 col-md-push-1">
                            <label>Nom du paramétrage</label>
                        </div>
                        <div class="col-md-8 col-md-push-1">
                            <div class="col-md-7">
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="col-md-1 ">*</div>
                        </div>
                        </div>  
                    </div>

                </div></div></div>

            <section class="animated fadeInRight ng-scope" id="main-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-md-2 col-md-push-1">
                                        <label>Agence(s) ERDF</label>
                                    </div>
                                    <div class="col-md-8 col-md-push-1">
                                        <div class="col-md-12">
                                        </div>
                                        <div class="col-md-9" id="setting_agency">
                                        {%  set key = 0 %}
                                        {% for child in form.agency %}
                                            {%  set key = key+1 %}
                                            <label class="checkbox-inline">
                                                {{ form_widget(child, { 'attr': {'class': 'checkbox'} }) }} {{ child.vars.label }}
                                            </label>
                                            {% if(key%3 == 0) %}
                                                <div class="row">
                                                    <div class="col-md-12 col-md-push-1">
                                                    </div>
                                                </div>
                                            {% endif %}   
                                        {% endfor %}
                                    </div>
                                        <div class="col-md-1 col-md-pull-2">*</div>
                                    </div>

                                </div>   <br/>

                                <div class="row">
                                    <div class="col-md-2 col-md-push-1">
                                        <label>Types d'enquêtes</label>
                                    </div>
                                    <div class="col-md-8 col-md-push-1">
                                        <div class="col-md-12">
                                        </div>
                                        <div class="col-md-9" id="setting_quest">
                                            {%  set key = 0 %}
                                            {% for child in form.quest %}
                                                {%  set key = key+1 %}
                                                <label class="radio-inline">
                                                    {{ form_widget(child, { 'attr': {'class': 'radio'} }) }} {{ child.vars.label }}
                                                </label>
                                                {% if(key%3 == 0) %}
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <div class="col-md-1 col-md-pull-2">*</div>
                                    </div>

                                </div>  <br/>

                                <div class="row">
                                    <div class="col-md-2 col-md-push-1">
                                        <label>Segment(s)</label>
                                    </div>
                                    <div class="col-md-8 col-md-push-1">
                                        <div class="col-md-12">
                                        </div>

                                        <div class="col-md-9" id="setting_segment">
                                            {%  set key = 0 %}
                                            {% for child in form.segment %}
                                                {%  set key = key+1 %}
                                                <label class="checkbox-inline">
                                                    {{ form_widget(child, { 'attr': {'class': 'checkbox'} }) }} {{ child.vars.label }}
                                                </label>
                                                {% if(key%3 == 0) %}
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <div class="col-md-1 col-md-pull-2">*</div>
                                    </div>

                                </div>   <br/>

                                <div class="row">
                                    <div class="col-md-2 col-md-push-1">
                                        <label>Date de début des envois</label>
                                    </div>
                                    <div class="col-md-8 col-md-push-1">
                                        <div class="col-md-6 dateBegin">
                                            {{ form_widget(form.dateBegin, { 'attr': {'class': 'form-control datepicker'} }) }}
                                        </div>
                                        <div class="col-md-1 col-md-push-1">*</div>
                                    </div>

                                </div><br/>
                                <div class="row">
                                    <div class="col-md-2 col-md-push-1">
                                        <label>Date de fin des envois</label>
                                    </div>
                                    <div class="col-md-8 col-md-push-1">
                                        <div class="col-md-6 dateBegin">
                                            {{ form_widget(form.dateEnd, { 'attr': {'class': 'form-control datepicker'} }) }}
                                        </div>
                                        <div class="col-md-1 col-md-push-1">*</div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
            <div class="row margin-top-15">
                <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-md-push-1">
                        <p class="titleheader">Créé par : {{setting.createdBy}} le {{ setting.createdAt|date("m/d/Y à H:i:s") }}</p>
                        <p class="titleheader">Mis à jour le {{ setting.createdAt|date("m/d/Y à H:i:s") }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4 col-md-push-1">
                            <a href="{{ path('setting_index',{'group_id':groupId}) }}">
                                <button type="button" class="btn btn-lg inline btn-setting submit_button padleftright">
                                    Retour à la liste
                                </button> 
                            </a>
                        </div>     
                    </div> 
                </div> 
            </div>     
        </div>
                    </div>
                </div>
        </section>
    </body>
    {% include 'SatisfactorySettingBundle:js:settingShow.js.twig' %}
{% endblock %}
