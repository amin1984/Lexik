{% extends '::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <section class="container animated fadeInUp">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div id="login-wrapper">
                    <header>
                        <div class="brand">
                            <a href="" class="logo">
                                <i class="icon-layers"></i>
                                <span>SATISFACTORY</span></a>
                        </div>
                    </header>
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">     
                                Connexion
                            </h3>
                        </div>
                        <div class="panel-body">
                            {% if error %}
                                <div class="alert alert-danger">
                                    {% if (error.message == "Bad credentials.") %}  
                                        Pseudo ou mot de passe incorrect
                                    {% endif %}
                                </div>
                            {% endif %}
                            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                                <div class="form-group">
                                    <div class="col-md-12">
                                        {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
                                        <input class="form-control" placeholder="Login" type="text" id="password" name="_username" required="required" />
                                        <i class="fa fa-user"></i>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
                                        <input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" />
                                        <i class="fa fa-lock"></i>
                                        {#<input type="checkbox" class="margin-right-10 margin-top-10" id="remember_me" name="_remember_me" value="on" />Se souvenir de moi
                                        <span class="pull-right"><a href="{{ path('fos_resetting_request') }}" class="help-block">Mot de passe oubli√© ?</a></span>#}
                                    </div>
                                </div>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <label for="remember_me">Se souvenir de moi</label>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="submit" id="_submit"  class="btn btn-primary btn-block" id="_submit" name="_submit" value="Connexion" />
                                        <hr />
                                    </div>
                                </div>
                            </form>               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}